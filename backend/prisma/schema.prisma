generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Resident {
  id    String @id 
  owner String
  contact String
  apart String
  floor Int
  flat Int @unique
  password String
  aadhar String?
  dueRent Int @default(0)
  flatRelation Flats? 
  paymentHistroy payHistory[]
}

model Admin {
  id String @id
  password String
  name String
  role String
  email String
  contact String
}

model Flats {
  occupiedById String @id
  apart String
  floor Int
  flat Int
  occupiedBy Resident @relation(fields : [occupiedById], references: [id])  
}

model Notifications {
  ticketId String @id //use NanoId
  createdBy String //just put in the name from payload
  status String @default("active")
  apart String?
  floor Int?
  flat Int?
  title String
  description String?
  resolutionTime Int? 
  cost Int
  createdAt  DateTime   @default(now())
  handledBy String? //show null unitl admin resolves it ie status is progress
}


model History {
  ticketId String @id
  apart String?
  floor Int?
  flat Int?
  title String
  description String?
  cost Int
  handledBy String
  resolvedAt DateTime @default(now())
}

model payHistory{
  transactionId String @id
  userId String 
  amount Int
  resident Resident? @relation(fields : [userId], references: [id])
}