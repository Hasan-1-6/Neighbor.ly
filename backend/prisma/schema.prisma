generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Resident {
  id    String @id //assign at runtime in backend
  owner String
  contact String
  apart String
  floor Int
  flat Int
  password String
  aadhar String?
  dueRent Int @default(0)
  flatRelation Flat? 
  paymentHistroy PayHistory[]
}

model Admin {
  id String @id
  password String
  name String
  role String
  email String @unique
  contact String
}

model Apartment{
  id Int @id @default(autoincrement())
  apartId String //A, B, C
  FloorCount Int
  FlatCount Int
  floors Floor[] 
}

model Floor{
  id Int @id @default(autoincrement())
  floorNum Int   //like 10  for 1 20 for 2 30 for 3 etc
  apartmentId Int
  totalFlats Int
  flats Flat[]
  apartment Apartment @relation(fields : [apartmentId], references: [id], onDelete: Cascade)
}

model Flat {
  id Int @id @default(autoincrement())
  flatNum Int //like 1 2 3 4 5... for each apart
  floorId Int
  floor Floor @relation(fields : [floorId], references : [id])
  occupiedById String? @unique
  occupiedBy Resident? @relation(fields : [occupiedById], references: [id], onDelete: Cascade)
}

model Notifications {
  ticketId String @id //use NanoId
  createdBy String //just put in the name from payload
  status String @default("active")
  apart String?
  floor Int?
  flat Int?
  title String
  description String?
  resolutionTime Int? 
  cost Int
  createdAt  DateTime   @default(now())
  handledBy String? //show null unitl admin resolves it ie status is progress
}


model History {
  ticketId String @id
  apart String?
  floor Int?
  flat Int?
  title String
  description String?
  cost Int
  handledBy String
  resolvedAt DateTime @default(now())
}

model PayHistory{
  transactionId String @id
  userId String 
  amount Int
  resident Resident? @relation(fields : [userId], references: [id])
}